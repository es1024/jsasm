{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "outDir": "build",
        "target": "es6",
        "removeComments": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ]
}
